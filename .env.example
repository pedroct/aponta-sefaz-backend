# Supabase (opcional - descomente se usar Supabase)
# SUPABASE_URL=https://seu-projeto.supabase.co
# SUPABASE_KEY=sua_supabase_anon_key
# SUPABASE_SERVICE_ROLE_KEY=sua_supabase_service_role_key
# SUPABASE_PROJECT_REF=seu_project_ref

# PostgreSQL Local (Docker)
DATABASE_NAME=aponta_db
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_SCHEMA=api_aponta

# URL de conexao (usa o container postgres)
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/aponta_db

# API
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_TITLE=API Aponta
API_VERSION=1.0.0

# Ambiente
ENVIRONMENT=production

# Autenticacao Azure DevOps (se necessario)
AUTH_ENABLED=true
AZURE_DEVOPS_ORG_URL=https://dev.azure.com/sua-org
AZURE_DEVOPS_PAT=seu_pat_token

# CORS Origins (separados por virgula)
CORS_ORIGINS=https://seu-dominio.com,https://app.seu-dominio.com
